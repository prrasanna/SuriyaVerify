{
  "compilerOptions": {
    /* Output */
    "outDir": "dist/server",
    "rootDir": "src/server",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* Language */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",

    /* Module & Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Emit JS (IMPORTANT for backend) */
    "noEmit": false
  },

  "include": ["src/server/**/*"],
  "exclude": ["src/app", "src/client", "node_modules"]
}
